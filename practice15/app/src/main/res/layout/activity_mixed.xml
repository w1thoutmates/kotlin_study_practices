<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MixedActivity">

    <FrameLayout
        android:id="@+id/frame_section"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="Название товара"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center|top"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Это текст о товаре, этот\nтовар очень интересный!\nДа-да купи его."
                    android:layout_gravity="center"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/frame_section">

        <Button
            android:id="@+id/btn_like"
            android:text="Нравится"
            android:backgroundTint="#2AFF00"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/btn_dislike"
            android:text="Не нравится"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:backgroundTint="#F00"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_x="100dp"
        android:layout_y="630dp"
        android:backgroundTint="#536DFF"
        android:text="Назад"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>