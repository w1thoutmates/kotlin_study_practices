<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".TableActivity">

    <TableRow>
        <TextView
            android:text="___A1___"
            android:background="#FF0000"
            android:textSize="20sp"/>
        <TextView
            android:text="___B1___"
            android:layout_span="2"
            android:textSize="20sp"
            android:background="#00FF00"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/cell_a2"
            android:textSize="20sp"
            android:text="___A2___"
            android:background="#0000FF"/>
        <TextView
            android:text="___B2___"
            android:textSize="20sp"
            android:background="#FFFF00"/>
        <TextView
            android:text="___C2___"
            android:textSize="20sp"
            android:background="#FF00FF"/>
    </TableRow>

    <TableRow>
        <TextView
            android:textSize="20sp"
            android:text="___A3-C3___"
            android:layout_span="3"
            android:background="#00FFFF"
            />
    </TableRow>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_x="100dp"
        android:layout_y="630dp"
        android:text="Назад"
        android:textSize="20sp"
        android:backgroundTint="#536DFF"/>

</TableLayout>