<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableActivity">

    <TableRow>
        <TextView
            android:text="A1"
            android:background="#FF0000"/>
        <TextView
            android:text="B1\n(горизонтально)"
            android:layout_span="2"
            android:background="#00FF00"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/cell_a2"
            android:text="A2\n(вертикально)"
            android:background="#0000FF"/>
        <TextView
            android:text="___B2___"
            android:background="#FFFF00"/>
        <TextView
            android:text="___C2___"
            android:background="#FF00FF"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="B3-C3 (горизонтально)"
            android:layout_span="2"
            android:background="#00FFFF"/>
    </TableRow>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_x="100dp"
        android:layout_y="630dp"
        android:text="Назад"
        android:textSize="20sp"
        android:backgroundTint="#536DFF"/>

</TableLayout>